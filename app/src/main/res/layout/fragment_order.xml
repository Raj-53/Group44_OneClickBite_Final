<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCook"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_styling"
        android:text="Cook Food"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOrder"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/btn_styling"
        android:text="Order Food"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnCook"
        app:layout_constraintStart_toStartOf="@+id/btnCook"
        app:layout_constraintTop_toBottomOf="@+id/btnCook" />

</androidx.constraintlayout.widget.ConstraintLayout>